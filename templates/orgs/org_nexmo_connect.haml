-extends "smartmin/form.html"

-load compress temba i18n

-block title
  -trans "Connect Nexmo"

-block pre-form
  .mb-4
    %p
      -trans "To connect your Nexmo Account you will need to provide us your Nexmo API key and secret."

    %p
      -trans "Both values can be found on your"
      <a target="nexmo" href="https://dashboard.nexmo.com/settings">
      -trans "Nexmo Settings Page"
      </a>
      -trans "in the API Settings section."

-block extra-script
  {{block.super}}
  :javascript
    $(document).ready(function() {
      $("form.smartmin-form").attr('autocomplete', 'off');
    });

